<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/wait"
        android:id="@+id/screen_wait"
        android:layout_gravity="center"
        android:visibility="gone"
        style="@style/WrappingStyle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/screen_main"
        android:visibility="visible"
        android:orientation="vertical">

        <ImageView
            style="@style/WrappingStyle"
            android:src="@drawable/title"
            android:layout_marginBottom="10dp" />

        <ImageView
            style="@style/WrappingStyle"
            android:src="@drawable/free"
            android:id="@+id/free_or_premium"
            android:layout_marginBottom="40dp" />

        <ImageView
            style="@style/WrappingStyle"
            android:src="@drawable/gas_level"
            android:id="@+id/gas_gauge"
            android:layout_marginBottom="40dp" />


        <LinearLayout
            style="@style/WrappingStyle"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                style="@style/ButtonStyle"
                android:id="@+id/drive_button"
                android:src="@drawable/drive"
                android:layout_marginRight="20dp" />

            <ImageView
                style="@style/ButtonStyle"
                android:id="@+id/buy_gas_button"
                android:src="@drawable/buy_gas"
                android:layout_marginBottom="20dp" />

        </LinearLayout>

        <LinearLayout
            style="@style/WrappingStyle"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                style="@style/ButtonStyle"
                android:src="@drawable/upgrade_app"
                android:id="@+id/upgrade_button"
                android:layout_marginRight="20dp" />

            <ImageView
                style="@style/ButtonStyle"
                android:id="@+id/infinite_gas_button"
                android:src="@drawable/infinite_gas"
                 />

        </LinearLayout>
    </LinearLayout>

</merge>